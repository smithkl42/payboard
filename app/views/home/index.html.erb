<div id="welcome" class="hero-unit span7">
  <h1>Payboard</h1>
  <h3>The company that keeps your customers coming back.</h3>
</div>
<div class="row span8 plans">
  <div class="span2 well">
    <div class="plan"><h2>Free</h2></div>
    <ul class="unstyled">
      <li>One payboard, with three data sources</li>
    </ul>
    <h3>Free!</h3>
    <%= link_to 'Subscribe', new_user_registration_path(:plan => 'free'), :class => 'btn btn-primary' %>
  </div>
  <div class="span2 well featured">
    <div class="plan featured-plan"><h2>Gold</h2></div>
    <ul class="unstyled">
      <li>One payboard, with access to all data sources</li>
    </ul>
    <h3>$19/month</h3>
    <%= link_to 'Subscribe', new_user_registration_path(:plan => 'gold'), :class => 'btn btn-primary' %> 
  </div>
  <div class="span2 well">
    <div class="plan"><h2>Platinum</h2></div>
    <ul class="unstyled">
      <li>Unlimited payboards, with access to all data sources</li>
    </ul>
    <h3>$29/month</h3>
    <%= link_to 'Subscribe', new_user_registration_path(:plan => 'platinum'), :class => 'btn btn-primary' %> 
  </div>
</div>